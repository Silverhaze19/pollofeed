- msat2sat = require('fmtbtc').msat2sat

.modal.fade
 .modal-dialog.modal-sm
   .modal-content
     .modal-body.text-center
       h5 Pay with Lightning
       if msatoshi
           p.font-weight-light.small #{ msat2sat(msatoshi, true) } satoshi
       div
           img.pollofeed_logo(src="pollofeed.png")
           img.d-block.w-100.mb-3(src=qr)
       if show_bolt11
         .input-group
           input.form-control(type='text', value=payreq, readonly)
           .input-group-append
             a.btn.btn-primary(href='lightning:'+payreq)
               i.fa.fa-bolt.text-warning.font-weight-bold
       p.text-muted.small.font-weight-light.mb-0 Invoice expires in #[span(data-countdown-to=expires_at)]
