      .row
        button(
          class="btn btn-primary btn-block btn_feed mx-auto mb-4"
          type="submit" data-buy-item="pollofeed"
          )
          i.fa.fa-bolt.font-weight-bold.mr-1
          span.font-weight-bold FEED
      .row.mb-4
        iframe.rounded.mx-auto.shadow(
          title='live stream'
          src='https://pollofeed.ngrok.io'
          height='480'
          style="border: none;"
          width="640"
        )
