  body
    div
        nav.navbar.mb-4
          a.d-none.d-sm-block.nav-link.nav-link-text-lg.font-weight-bold(href='https://btcpal.online/apps/ZTDhnT9yQ52MLG9qqgT2hG8q1Uu/pos')
